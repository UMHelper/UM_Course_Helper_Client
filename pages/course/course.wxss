    position: relative;
    height: auto;
} */

.profs .title view{
    width: 50%;
}

.profs .title view .prof{
    /* position: absolute; */
    font-size: 30rpx;
    color: #000000;
    width: 50%;
    font-weight: bold;
}
.profs{
    position: relative;
    margin-top:40rpx;
}
.profs .result{
    position: absolute;
    font-size: 30rpx;
    color: #000000;
    right: 60rpx;
    top: 40rpx;
}

/* .profs .content{
    /* margin-top: 80rpx; */
/* } */ 

.profs .content .c1, .profs .content .c2{
    position: relative;
}

.profs .content .c1 view,.profs .content .c2 view{
    font-size: 30rpx;
    display: inline;
}

.grade{
    position: absolute;
    right: 60rpx;
}

.profs .num{
    position: absolute;
    top: 80rpx;
    right: 65rpx;
}

.profs .num{
    height: 50rpx;
}
.profs .num view{
    font-size: 25rpx;
}


.info_contain{
    margin-bottom: 100rpx;
}
.info_contain .info{
    color: #fff;
    display: flex;
    justify-content: center;
    margin-top: 100rpx;
}
.info_contain view{
    display: inline;
}
.description_show{
    font-size: 35rpx;
    max-height: 500rpx;
    line-height: 40rpx;
    margin-top: 30rpx;
    overflow: auto;
    margin-right: 40rpx;
}
.description_hide{
    font-size: 35rpx;
    max-height: 500rpx;
    line-height: 40rpx;
    margin-top: 30rpx;
    overflow: auto;
    margin-right: 40rpx;
    display: none;
}