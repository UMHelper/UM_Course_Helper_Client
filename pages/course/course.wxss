page{
    background:#30548B;
    margin: 0;
}
.course_info, .profs{
    font-size: 30rpx;
    color: #707070;
    width: 70%;
    background: #ffffff ;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    padding-left: 40rpx;
    margin: auto;
    margin-top:70rpx;
    border-radius: 60rpx;
    box-shadow: 0px 0px 40px  rgba(0,0,0,.3);
    -webkit-box-shadow: 0px 0px 40px  rgba(0,0,0,.3);
    line-height: 50rpx;
}

.course_info .code{
    color: #000000;
    font-size: 30rpx;
    font-weight: bold;
}
.courseDescription{
    color: #000000;
    
}

