/* pages/search/search.wxss */

page{
    position: relative;
    background:#9eb3c2;
    margin: 0;
}
.logo_contain{   
    width: 600rpx;
    margin-left: 100rpx;
    margin-top: 50rpx;
}

.logo_contain .logo{
    display: inline-block;
    width: 250rpx;
    height: 250rpx;
    vertical-align:middle;
    /* box-shadow: 0px 0px 68px -12px rgba(69,69,69,1); */
    /* -webkit-box-shadow: 0px 0px 68px -12px rgba(69,69,69,1); */
    border-radius: 250rpx;
}
.logo_contain .logo image{
    width: 100%;
    height: 100%;
    
}

.logo_contain .text{
    color: #fff;
    margin-left: 50rpx;
    font-size: 50rpx;
    display: inline-block;
    vertical-align:middle;
}

.logo_contain .text view{
    line-height: 70rpx;
    margin:auto ;
}

.search_contain{
    position: relative;
    background-color:#fff ;
    width: 600rpx;
    height: 600rpx;
    margin: auto;
    margin-top: 80rpx;
    border-radius: 60rpx;
    box-shadow: 0px 0px 64px  rgba(0,0,0,.46);
    -webkit-box-shadow: 0px 0px 64px  rgba(0,0,0,.46);

}
.search_contain .search1{
    position: absolute;
    width: 80%;
    overflow:hidden;
    /* background-color: #5d93ab; */
    background-color: #fff;
    border-radius: 45rpx;
    left: 10%;
    top: 15%;
    border: 3rpx #5d93ab solid;
    transition: all .5s ease-out;

}
.search_contain .search1 .result_contain{
    max-height: 363rpx;
    overflow: auto;
    border-radius: 0 0 45rpx 45rpx;
}
.search_contain .search1 .result_contain view{
    height: 60rpx;
    border-top: 1rpx #8d93ab solid;
    border-bottom: 1rpx #8d93ab solid;
    background: #d6e0f0;
    line-height: 60rpx;
    padding-left: 40rpx;
}

.search_contain .search1 input{
    font-size: 40rpx;
    width: 80%;
    height: 90rpx;
    margin: auto;
    /* background-color: #5d93ab; */
    background-color: #fff;
    border-radius: 15rpx;
    color: #000;
    /* border: 3rpx #5d93ab solid; */
}
.search_contain .search2{
    position: absolute;
    width: 80%;
    height: 90rpx;
    /* background-color: #5d93ab; */
    background-color: #fff;
    border-radius: 45rpx;
    left: 10%;
    top: 40%;
    border: 3rpx #5d93ab solid;

}

.search_contain .search2 input{
    font-size: 40rpx;
    width: 80%;
    height: 100%;
    margin: auto;
    /* background-color: #5d93ab; */
    background-color: #fff;
    border-radius: 15rpx;
    color: #000;
    /* border: 3rpx #5d93ab solid; */
}

.search_contain .submit{
    position: absolute;
    left: 10%;
    bottom: 15%;
    width: 80%;
    height: 90rpx;
}


.search_contain .submit button{
    width: 100%;
    height: 100%;
    font-size: 25rpx;
    background: #9eb3c2;
    border-radius: 45rpx;
}
.search_contain .submit button[disabled]{
    width: 100%;
    height: 100%;
    font-size: 25rpx;
    background: #000;
    border-radius: 45rpx;
}

.search_contain .submit button view{
    margin: auto;
    width: 80%;
    font-size: 40rpx;
    color: #fff;
    height: 90rpx;
}

.search_contain .text{
    color: #000;
    position: absolute;
    top: 31%;
    left: 10%;
    width: 80%;
    font-size: 30rpx;
    text-align: center;
}
.search_contain .info{
    color: #fff;
    position: absolute;
    bottom: -60rpx;
    left: 10%;
    width: 80%;
    font-size: 20rpx;
    text-align: center;
}

.search_contain .select{
    width: 50%;
    margin: auto;
    /* margin-top: 30rpx; */
    padding-top: 30rpx;
}

.info_contain{
    width: 100%;
    margin-bottom: 100rpx;
}
.info_contain .info1{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    /* display: flex; */
    /* justify-content: center; */
    margin-top: 100rpx;
}
.info_contain .info2{
    width: 100%;
    /* height: 25rpx; */
    line-height: 15rpx;
    text-align: center;
    margin-top: 10rpx;
    font-size: 25rpx;
    color: #fff;
    /* display: flex; */
    /* justify-content: center; */
    /* margin-: 100rpx; */
}

.search_contain .info2{
    width: 80%;
    margin: auto;
    font-size: 25rpx;
    color: #000;
    /* display: flex; */
    justify-content: center;
